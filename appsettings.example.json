{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "48f68bad-4d77-48b7-a10c-6afdcbc1a061",
        "SanitizeTinyMce": true,
        "MaxRequestLength": 4294967295,
        "Smtp": {
          "To": "your-destination-email@example.com",
          "From": "your-gmail@gmail.com",
          "Host": "smtp.gmail.com",
          "Port": 587,
          "Username": "your-gmail@gmail.com",
          "Password": "YOUR_GMAIL_APP_PASSWORD_HERE",
          "SecureSocketOptions": "StartTls"
        }
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        },
        "UrlReplacingCharacters": {
          "ü": "u",
          "ö": "o",
          "ç": "c",
          "ş": "s",
          "ı": "i",
          "İ": "I",
          "ğ": "g"
        }
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "Security": {
        "AllowConcurrentLogins": false
      },
      "WebRouting": {
        "ContentError404": "umb://document/e84505ff-dd83-44d1-a239-7e35f9148208"
      },
      "Hosting": {
        "Debug": false
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeAuto"
      }
    }
  },
  "GoogleSheets": {
    "CredentialsPath": "your-google-credentials-file.json",
    "SpreadsheetId": "YOUR_GOOGLE_SPREADSHEET_ID",
    "ContactFormSheetName": "İletişim Formları",
    "AppointmentSheetName": "Randevu Talepleri"
  },
  "SmtpSettings": {
    "To": "your-destination-email@example.com",
    "From": "your-gmail@gmail.com",
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "your-gmail@gmail.com",
    "Password": "YOUR_GMAIL_APP_PASSWORD_HERE",
    "SecureSocketOptions": "StartTls"
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Data Source=YOUR_SQL_SERVER.database.windows.net;Initial Catalog=YOUR_DATABASE;User ID=YOUR_USERNAME;Password=YOUR_DATABASE_PASSWORD;Connect Timeout=30;Encrypt=True;TrustServerCertificate=True;",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.SqlClient"
  }
}
