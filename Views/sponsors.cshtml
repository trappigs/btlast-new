@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Cms.Core.Web
@{
    Layout = "masterLayout.cshtml";
    ViewBag.Title = "Sponsorlarımız";
    var sponsors = Model.Children().Where(x => x.IsVisible());
}

<div class="sponsors-section">
    <div class="container">
        <h1>@Model.Name</h1>

        <div class="sponsors-grid">
            @foreach (var sponsor in sponsors)
            {
                <div class="sponsor-card">
                    @if (!string.IsNullOrEmpty(sponsor.Value<string>("sponsorUrl")))
                    {
                        var sponsorUrlRaw = sponsor.Value<string>("sponsorUrl");
                        var siteUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
                        var sponsorUrl = siteUrl + "/" + sponsorUrlRaw;
                        var sponsorLogo = sponsor.Value<IPublishedContent>("sponsorLogo");
                        var sponsorLogoUrl = sponsorLogo?.Url(mode: UrlMode.Absolute) ?? "";
                        var sponsorName = sponsor.Value<string>("sponsorName");
                        var sponsorText = sponsor.Value<string>("sponsorText"); // Yeni alias
                        
                        <a href="@sponsorUrl" class="sponsor-link">
                            <div class="sponsor-image-container">
                                @if (sponsorLogo != null)
                                {
                                    <img src="@sponsorLogoUrl" alt="@(sponsorName ?? sponsor.Name)" class="sponsor-background-image" />
                                }
                                else
                                {
                                    <div class="sponsor-placeholder-bg">
                                        <span>@((sponsorName ?? sponsor.Name).Substring(0, 1).ToUpper())</span>
                                    </div>
                                }
                                
                                <div class="sponsor-overlay">
                                    <div class="sponsor-overlay-content">
                                        <h3 class="sponsor-overlay-title">@(sponsorName ?? sponsor.Name)</h3>
                                        @if (!string.IsNullOrEmpty(sponsorText))
                                        {
                                            <p class="sponsor-overlay-text">@sponsorText</p>
                                        }
                                        <span class="sponsor-overlay-button">Detayları Gör</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        var sponsorLogo = sponsor.Value<IPublishedContent>("sponsorLogo");
                        var sponsorLogoUrl = sponsorLogo?.Url(mode: UrlMode.Absolute) ?? "";
                        var sponsorName = sponsor.Value<string>("sponsorName");
                        var sponsorText = sponsor.Value<string>("sponsorText"); // Yeni alias
                        
                        <div class="sponsor-image-container">
                            @if (sponsorLogo != null)
                            {
                                <img src="@sponsorLogoUrl" alt="@(sponsorName ?? sponsor.Name)" class="sponsor-background-image" />
                            }
                            else
                            {
                                <div class="sponsor-placeholder-bg">
                                    <span>@((sponsorName ?? sponsor.Name).Substring(0, 1).ToUpper())</span>
                                </div>
                            }
                            
                            <div class="sponsor-overlay">
                                <div class="sponsor-overlay-content">
                                    <h3 class="sponsor-overlay-title">@(sponsorName ?? sponsor.Name)</h3>
                                    @if (!string.IsNullOrEmpty(sponsorText))
                                    {
                                        <p class="sponsor-overlay-text">@sponsorText</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .sponsors-section {
        padding: 80px 0;
        background: #f8f9fa;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 50px 20px;
    }

    .sponsors-section h1 {
        margin-top: 50px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
        color: #045129;
        font-size: 2.5rem;
    }

    .sponsors-section p {
        text-align: center;
        margin-bottom: 5px;
        font-size: 0.8rem;
    }

    /* 3 Sütunlu Grid */
    .sponsors-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
    }

    .sponsor-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 300px;
        position: relative;
    }

    .sponsor-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 40px rgba(0,0,0,0.15);
    }

    .sponsor-link {
        display: block;
        text-decoration: none;
        color: inherit;
        height: 100%;
        width: 100%;
    }

    .sponsor-image-container {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .sponsor-background-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .sponsor-card:hover .sponsor-background-image {
        transform: scale(1.05);
    }

    .sponsor-placeholder-bg {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #28a745, #20c997);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 4rem;
        font-weight: bold;
    }

    /* Overlay Efekti */
    .sponsor-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            135deg,
            rgba(40, 117, 69, 0.9) 0%,
            rgba(32, 201, 151, 0.9) 100%
        );
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
        padding: 30px;
        text-align: center;
    }

    .sponsor-card:hover .sponsor-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    .sponsor-overlay-content {
        color: white;
        text-align: center;
    }

    .sponsor-overlay-title {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 5px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .sponsor-overlay-text {
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 20px;
        opacity: 0.95;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .sponsor-overlay-button {
        display: inline-block;
        padding: 12px 24px;
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .sponsor-overlay-button:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .sponsors-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .sponsor-card {
            height: 350px;
        }
    }

    @@media (max-width: 768px) {
        .sponsors-section {
            padding: 60px 0;
        }
        
        .sponsors-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
        
        .sponsors-section h1 {
            font-size: 2rem;
        }
        
        .sponsor-card {
            height: 320px;
        }
        
    @@media (max-width: 768px) {
        .sponsors-section {
            padding: 60px 0;
        }
        
        .sponsors-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
        
        .sponsors-section h1 {
            font-size: 2rem;
        }
        
        .sponsor-card {
            height: 320px;
        }

        /* Mobilde overlay her zaman görünür */
        .sponsor-overlay {
            opacity: 1;
            transform: translateY(0);
            background: linear-gradient(
                135deg,
                rgba(4, 81, 41, 0.8) 0%,
                rgba(45, 45, 45, 0.8) 100%
            );
        }

        .sponsor-overlay {
            padding: 30px;
        }

        .sponsor-overlay-title {
            font-size: 1.2rem;
        }

        .sponsor-overlay-text {
            font-size: 1.1rem;
            margin-top: 10px !important;
            margin-bottom: 10px !important;
        }

        .sponsor-overlay-text p {
            font-size: 1.1rem;
        }
    }
    }

    @@media (max-width: 480px) {
        .sponsor-card {
            height: 250px;
        }

        .sponsor-placeholder-bg {
            font-size: 3rem;
        }
    }
</style>