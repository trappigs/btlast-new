@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "masterLayout.cshtml";
    ViewBag.Title = "Hakkımızda";
    var siteUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
    var currentUrl = $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}";
    
    // Uzman Ekip Verisi (Schema için)
    // Not: Gerçek isimler varsa "Person" şeması daha güçlü olur ama şu an sadece roller var.
    // Rolleri "employee" olarak eklemek yerine "AboutPage"in "mainContentOfPage" kısmına dahil edeceğiz.
}

@* --- SEO İÇİN ÖZELLEŞTİRİLMİŞ ABOUTPAGE ŞEMASI --- *@
<script type="application/ld+json">
{
  "@@context": "https://schema.org",
  "@@graph": [
    {
      "@@type": "AboutPage",
      "@@id": "@currentUrl",
      "url": "@currentUrl",
      "name": "Hakkımızda | Bereketli Topraklar",
      "description": "Bereketli Topraklar; Bursa, Balıkesir ve Çanakkale başta olmak üzere imarlı arsa projeleri sunan, şeffaflık ve güvene dayalı bir gayrimenkul yatırım şirketidir.",
      "isPartOf": { "@@id": "@siteUrl/#website" },
      "about": { "@@id": "@siteUrl/#organization" },
      "inLanguage": "tr-TR",
      "mainEntity": { "@@id": "@siteUrl/#organization" }
    },
    {
      "@@type": "Organization",
      "@@id": "@siteUrl/#organization",
      "name": "Bereketli Topraklar",
      "url": "@siteUrl",
      "slogan": "Yatırımın Güvenli Limanı",
      "knowsAbout": [
        "Arsa Yatırımı",
        "İmarlı Arsa",
        "Gayrimenkul Geliştirme",
        "Yatırım Danışmanlığı"
      ],
      "department": [
        {
          "@@type": "Organization",
          "name": "Teknik Ekip",
          "description": "Makina Mühendisi ve Değerleme Uzmanlarından oluşan altyapı ve değerleme birimi."
        },
        {
          "@@type": "Organization",
          "name": "Hukuk Birimi",
          "description": "Yasal süreçleri yöneten avukat kadrosu."
        },
        {
          "@@type": "Organization",
          "name": "Finans Birimi",
          "description": "Muhasebe ve finans uzmanları."
        }
      ]
    }
  ]
}
</script>

<link rel="stylesheet" href="/css/about.css">

<section class="about-hero">
    <div class="hero-container">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Biz Kimiz?</h1>
                
                <div class="hero-description">
                    <p>
                        Biz, Bereketli Topraklar olarak, Türkiye'nin zengin ve
                        bereketli topraklarında değerli arsa yatırım fırsatları sunan
                        bir gayrimenkul şirketiyiz. Toprağın bereketine ve yatırımın
                        geleceğine derin bir inançla hareket ediyoruz. Amacımız,
                        arsa yatırımının uzun vadeli faydalarını geniş kitlelere
                        erişilebilir kılmaktır. Kuruluşumuzdan bu yana şeffaflık,
                        güvenilirlik ve müşteri memnuniyetini iş yapış şeklimizin
                        temeli olarak benimsemiş durumdayız.
                    </p>
                    
                </div>
            </div>
            
            <div class="hero-image">
                <img src="/media/hrkjlnda/bereketli-topraklar-logo-2-pdf.svg" alt="Bereketli Topraklar Logo" />
            </div>
        </div>
    </div>
</section>
<section class="about-hero">
    <div class="hero-container">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Misyonumuz</h1>
                
                <div class="hero-description">
                    <p>
                        Misyonumuz, müşterilerimize sadece toprak parçaları sunmakla
                        kalmayıp, aynı zamanda hayallerini gerçekleştirme potansiyeline
                        sahip fırsatlar sağlamaktır. Arsa yatırımı konusunda derinlemesine
