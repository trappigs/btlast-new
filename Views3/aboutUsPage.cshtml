@await Html.PartialAsync("NelerYapiyoruzSection-Hakkimizda")


@await Html.PartialAsync("_ValuesTimeline")


<section class="sustainability-section">
    <div class="sustainability-container">
        <div class="sustainability-grid" style="border-radius: 12px 12px 0px 0px">
            <div class="sustainability-image sustainability-image-1"></div>
            <div class="sustainability-content">
                <h2 class="sustainability-title">
                    Sürdürülebilirlik ve Toplumsal Sorumlulukla Geleceğe Katkı
                </h2>
                <p class="sustainability-description">
                    Bereketli Topraklar olarak, her projemizin merkezinde yalnızca ekonomik değer değil, toplumsal fayda da bulunuyor. Çevreye duyarlı yaklaşımımız, etik değerlerimiz ve toplumsal sorumluluk bilincimizle, müşterilerimizden çalışanlarımıza kadar tüm paydaşlarımız için kalıcı değer üretmeyi amaçlıyoruz. Doğaya ve topluma saygılı iş modelimizle, geleceğin güvenli ve sürdürülebilir yarınlarını inşa etmek için çalışıyoruz.
                </p>
            </div>
        </div>
        <div class="sustainability-grid" style="border-radius: 0px 0px 12px 12px">
            <div class="sustainability-content">
                <h2 class="sustainability-title">
                    Paydaşlarımız İçin Kalıcı Değer Üretiyoruz
                </h2>
                <p class="sustainability-description">
                    Sürdürülebilir büyümeyi yalnızca iş sonuçlarımızda değil, toplumla olan bağımızda da gözetiyoruz. Yenilikçi projelerimiz ve genişleyen hizmet portföyümüz sayesinde, sektördeki liderliğimizi sürdürürken, aynı zamanda sosyal sorumluluklarımızı yerine getiriyoruz. Bereketli Topraklar, yalnızca bir yatırım şirketi değil; aynı zamanda toplumun, çevrenin ve gelecek nesillerin yanında duran güvenilir bir iş ortağıdır.
                </p>
            </div>
            <div class="sustainability-image sustainability-image-2"></div>
        </div>
    </div>
</section>


@await Html.PartialAsync("GenisPortfoyumuzSection-AboutUs")


