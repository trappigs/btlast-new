<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <security>
      <requestFiltering>
        <!-- 2 MB in bytes -->
        <requestLimits maxAllowedContentLength="4294967295" />
      </requestFiltering>
    </security>

    <rewrite>
      <rules>

        <!-- 1) www.bereketlitopraklar.com.tr -> https://bereketlitopraklar.com.tr -->
        <rule name="WWW to non-WWW" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^www\.bereketlitopraklar\.com\.tr$" ignoreCase="true" />
          </conditions>
          <action type="Redirect"
                  url="https://bereketlitopraklar.com.tr/{R:1}"
                  redirectType="Permanent" />
        </rule>

        <!-- 2) http -> https (non-www dahil tÃ¼m hostlar) -->
        <rule name="HTTP to HTTPS redirect" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect"
                  url="https://{HTTP_HOST}/{R:1}"
                  redirectType="Permanent" />
        </rule>

      </rules>
    </rewrite>

    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>

    <aspNetCore processPath="dotnet"
                arguments=".\btlast.dll"
                stdoutLogEnabled="false"
                stdoutLogFile=".\logs\stdout"
                hostingModel="inprocess" />

  </system.webServer>
</configuration>
